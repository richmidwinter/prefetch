{
  "manifest_version": 3,
  "name": "Prefetch on Hover",
  "version": "1.0.0",
  "description": "Speeds up browsing by prefetching pages on mouseover",
  "permissions": [
    "activeTab",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
